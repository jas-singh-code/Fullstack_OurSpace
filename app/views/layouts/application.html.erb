<!DOCTYPE html>
<html>
  <head>

    <title>Ourspace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta property="og:title" content="Ourspace" />
    <meta property='og:image' content="<%= image_url('Project_pic.png') %>"/>
    <meta property="og:description"
      content="Single-page React application clone of Facebook.com"
    />
    <meta property="og:url"
      content="https://ourspace-1.herokuapp.com/"
    />

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": "<%= current_user.id%>",
          "firstName": "<%= current_user.first_name %>",
          "lastName": "<%= current_user.last_name %>",
          "email": "<%= current_user.email%>",
          "birthday": "<%= current_user.birthday %>",
          "gender": "<%= current_user.gender %>",
          "occupation": "<%= current_user.occupation %>",
          "education": "<%= current_user.education %>",
          "location": "<%= current_user.location %>",
          "profilePicture": "<%= url_for(current_user.profile_picture)%>"
        }
      </script>
    <% end %>
    <script type="text/javascript">window.logoiconURL= "<%= image_url('favicon11.ico')%>";</script>
    <script type="text/javascript">window.logoInitialsURL= "<%= image_url('Ourspace_O_logo.png')%>";</script>
    <script type="text/javascript">window.like_button_icon= "<%= image_url('like_icon.png')%>";</script>
    <%= favicon_link_tag asset_path('favicon11.ico') %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
